{
  "name": "todomvc-bdd-tests",
  "description": "BDD test suite for TodoMVC using Cucumber",
  "private": true,
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "chromedriver": "^140.0.4",
    "selenium-webdriver": "^4.15.0"
  },
  "scripts": {
    "test": "cucumber-js *.feature",
    "test:html": "cucumber-js *.feature --format html:reports/cucumber-report.html",
    "test:json": "cucumber-js *.feature --format json:reports/cucumber-report.json"
  },
  "cucumber": {
    "requireModule": [],
    "require": [
      "features/step_definitions/**/*.js",
      "features/support/**/*.js"
    ],
    "format": [
      "progress-bar",
      "json:reports/cucumber-report.json"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    }
  }
}
