{
  "name": "todomvc-bdd-tests",
  "version": "1.0.0",
  "description": "BDD automated tests for TodoMVC jQuery example",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:headless": "HEADLESS=true cucumber-js",
    "test:debug": "DEBUG=true cucumber-js",
    "install:playwright": "npx playwright install",
    "setup": "npm install && npm run install:playwright"
  },
  "keywords": ["bdd", "cucumber", "playwright", "todomvc", "testing"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "expect": "^29.7.0"
  },
  "cucumber": {
    "requireModule": [],
    "require": [
      "support/**/*.js",
      "step_definitions/**/*.js"
    ],
    "format": [
      "progress",
      "json:reports/cucumber_report.json"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": [
      "*.feature"
    ]
  }
}